<div class="authentication-bg">

  <div class="account-pages mt-5 mb-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <div class="card">


            <div class="card-header pt-4 pb-4 text-center bg-primary">
                <img src="<%= asset_path 'logo.png' %>" alt="" height="58">
              <label>IADA</label>
            </div>

            <div class="card-body p-4">

              <div class="text-center w-75 m-auto">
                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Sign In</h4>
                <p class="text-muted mb-4">Digite seu endereço de e-mail e senha para acessar o painel.</p>
              </div>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email,
                                    autofocus: true,
                                    autocomplete: "email",
                                    class:"form-control",
                                    placeholder:"Digite Seu Email" %>
                </div>

                <div class="form-group">
                  <%= link_to "Esqueceu Sua Senha?",
                              new_password_path(resource_name),
                              class:"text-muted float-right" %>

                  <%= f.label :password %><br />
                  <%= f.password_field :password,
                                    autofocus: true,
                                    class:"form-control",
                                    autocomplete: "email",
                                    placeholder:"Digite Sua Senha" %>
                </div>


                <div class="form-group mb-0 text-center">
                  <%= f.submit "Entrar", class:"btn btn-primary" %>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer footer-alt">
    2021 - 2021 © IADA - Weathe
  </footer>

</div>
