<h1>Importações</h1>


<%#= link_to 'Nova Importação', new_import_path %>

<table class="table table-striped table-dark shadow rounded">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Finalizado</th>
      <th scope="col">Data Criação</th>
      <th scope="col">Quantidade Arquivos</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= import.cdg_import %></td>
        <td><%= import.termino ? 'True' : 'False' %></td>
        <td><%= import.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= import.import_datas.count %></td>
        <td>
          <%= render 'layouts/buttons_acao', data: import, url: edit_weather_station_path(import) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>